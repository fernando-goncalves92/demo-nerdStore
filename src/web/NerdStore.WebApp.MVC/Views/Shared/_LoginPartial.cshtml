@using NerdStore.WebApp.MVC.Facilities.User
@inject IAspNetUser AspNetUser 

<ul class="navbar-nav">
    @if (AspNetUser.IsAuthenticated())
    {
        <li class="nav-item">
            <a class="nav-link text-dark" title="Manage">Olá, @AspNetUser.GetUserEmail()</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Identity" asp-action="Logout">Sair</a>
        </li>
    }
    else
    {
        <li class="nav-item" style="padding-right: 30px;">
            <a class="btn btn-success" asp-controller="Identity" asp-action="CreateAccount">Crie sua conta</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-primary" asp-controller="Identity" asp-action="Login">Login</a>
        </li>
    }
</ul>
